
  var cart = document.getElementById("cart");
  var cartItems = {};
  var totalAmount = 0;

 
  function updateCartDisplay() {
    var cart_display = document.getElementById("cart-value");
    var cartQuantity = Object.values(cartItems).reduce((acc, val) => acc + val, 0);
    cart_display.textContent = cartQuantity;
  }

  // Function to add an item to the cart
  function addItemToCart(itemId, itemName, itemPrice) {
    if (cartItems[itemId]) {
      cartItems[itemId] += 1; // Increment quantity if item already exists
    } else {
      cartItems[itemId] = 1; // Initialize quantity to 1 if item is not in cart
    }
    totalAmount += itemPrice;
    updateCartDisplay();
  }

  // Function to print cart details to console
  function printCartDetails() {
    console.log("Cart Items:");
    for (var itemId in cartItems) {
      var itemQuantity = cartItems[itemId];
      if (itemElement) {
        var itemName = itemElement.querySelector("h3").textContent;
        console.log(`${itemName}: Quantity-${itemQuantity}`);
      }
    }
    console.log("Total Amount =", totalAmount);
  }
  

  // Add click event listeners for "Add to Cart" buttons
  document.querySelectorAll(".button").forEach((button) => {
    button.addEventListener("click", () => {
      var itemId = button.id;
      var itemPrice = parseFloat(document.getElementById(itemId).querySelector("p").textContent.slice(1)); // Remove the "$" sign and parse as float
      addItemToCart(itemId, null, itemPrice);
    });
  });

  // Add click event listener for the cart to print details
  cart.addEventListener("click", () => {
    printCartDetails();
  });